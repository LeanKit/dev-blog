{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}

<article class="{{post_class}} post type-post blog-post">
    <header class="entry-header">
        <h2 class="blog-post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <div class="blog-post-meta">
            <time class="entry-date published" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
            <span class="byline">
                by
                {{!-- {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}} --}}
                {{author}}
            </span>

        </div>

    </header>
    <section class="post-excerpt">
        <p>{{excerpt words="50"}}</p>
        <p><a class="read-more" href="{{url}}"><span class="btn brn-primary">Continue Reading &raquo;</span></a></p>
    </section>
</article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
